	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="today" type="text" size="35" default="Today" label="Show Today" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />	
		<param name="yesterday" type="text" size="35" default="Yesterday" label="Show Yesterday" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />	
		<param name="week" type="text" size="35" default="This week" label="Show This week" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />
		<param name="lweek" type="text" size="35" default="Last week" label="Show Last week" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />		
		<param name="month" type="text" size="35" default="This month" label="Show This month" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />
		<param name="lmonth" type="text" size="35" default="Last month" label="Show Last month" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />
		<param name="all" type="text" size="35" default="All" label="Show All days" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />		
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="beginday" type="text" size="35" default="" label="Show 'Starting Day'" description="The day when you installed this counter. Example: 'Since Apr 2009'. Default: Don't show." />
		<param name="online" type="text" size="35" default="Online (20 minutes ago):" label="Show 'Online Now'" description="Show number of online visitors in 20 minutes ago. Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />
		<param name="guestip" type="text" size="35" default="Your IP:" label="Show 'Guest IP'" description="Translate to your language. Type 0 (zero) or O, if you dont' want to show it." />
		<param name="guestinfo" type="text" size="35" default="Yes" label="Show Others Info" description="Show Guest's Browser, Guest's Platform... Type 0 (zero) or O, if you dont' want to show it. Leave blank to default." />
		<param name="formattime" type="text" size="35" default="Now: %Y-%m-%d %H:%M" label="Show Date/Time Now" description="Show Date/Time Now. %Y - year, %m - month, %d - day, %H - hour, %W - minute, %S - second. Type 0 (zero) or O, if you dont' want to show it. Leave blank to default." />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="digit_type" type="list" default="mechanical" label="Digit counter type" description="Select the type of display. Choose the last one if you don't want to show digit counter." >
			<option value="mechanical">Mechanical</option>
			<option value="nixie">Nixie</option>
			<option value="blue">Blue</option>
			<option value="slot">Slot</option>
			<option value="boxes">Boxes</option>
			<option value="italic">Italic</option>
			<option value="NONE">- Don't show -</option>
		</param>		
		<param name="widthtable" type="list" default="90" label="Width Table" description="The width (%) of statistics table." >
			<option value="100">100%</option>
			<option value="95">95%</option>
			<option value="90">90%</option>
			<option value="85">85%</option>
			<option value="80">80%</option>
			<option value="75">75%</option>
			<option value="70">70%</option>
			<option value="65">65%</option>
			<option value="60">60%</option>
			<option value="55">55%</option>
			<option value="50">50%</option>
		</param>
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="sessiontime" type="text" default="10" label="Session Time" description="Session Lifetime. Default: 10 minutes." />	
		<param name="initialvalue" type="text" default="0" label="Initial Value" description="Initial Value. Type any number which you want. The counter begin from this number. Default: 0 visitor." />
		<param name="issunday" type="radio" default="1" label="Start of Week" description="The day start of week." >
			<option value="1">Sunday</option>
			<option value="0">Monday</option>
		</param>
		
	</params>
	<params group="advanced">
		<param name="iscache" type="radio" default="1" label="Caching" description="Choose 'Yes' to cache the content of this module and improve performance." >
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="deldays" type="text" default="70" label="# Days Archive" description="Number of days which you want to store the statistics. Recommend: 15 days (02 weeks) and turn off 'Show This Month, Show Last Month' options. Default: 63 days (02 months). Don't set too high." />
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="pretext" type="textarea" cols="20" rows="5" default="" label="Pre-text" description="The text or HTML code displays at the top of this module." />
		<param name="posttext" type="textarea" cols="20" rows="5" default="" label="Post-text" description="The text or HTML code displays at the end of this module." />
	</params>
